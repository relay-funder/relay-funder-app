# =============================================================================

# Vercel Configuration (optional)
NEXT_PUBLIC_VERCEL_ENV=
NEXT_PUBLIC_VERCEL_GIT_COMMIT_REF=

NEXT_PUBLIC_VERCEL_GIT_COMMIT_SHA=

# Feature Flags
NEXT_PUBLIC_ENABLE_ROUNDS_VISIBILITY=false

# Sentry Configuration
SENTRY_DSN=

# Developer Mock
MOCK_API=true

# generate with `npx auth secret`. Read more: https://cli.authjs.dev
AUTH_SECRET=""
NEXTAUTH_URL="http://localhost:1000"
NEXT_PUBLIC_BASE_URL="http://localhost:1000"
# Get projectId from https://cloud.reown.com
NEXT_PUBLIC_REOWN_CLOUD_PROJECT_ID=""

# Pinata (IPFS) Configuration
# Required if FILE_STORAGE_PROVIDER='PINATA'
# Get these from https://app.pinata.cloud/developers/api-keys
FILE_STORAGE_PROVIDER=LOCAL
PINATA_API_JWT_ACCESS_TOKEN="your_pinata_jwt_token_here"
NEXT_PUBLIC_PINATA_GATEWAY_URL="your-gateway.pinata.cloud"

# Cross-Domain Callback Protection
# Comma-separated list of domain patterns where external callback URLs should be blocked
# Supports wildcards (*) and exact matches - prevents authentication issues on preview deployments
NEXT_PUBLIC_BLOCK_EXTERNAL_CALLBACK_DOMAINS=*.vercel.app
